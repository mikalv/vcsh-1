(use-package! "unit-test")

(define-test bitwise-and
  (test-case (= (bitwise-and 15 7) 7))
  (test-case (= (bitwise-and 15 39) 7))
  (test-case (= (bitwise-and 65535 39) 39))
  (test-case (= (bitwise-and 65535 0) 0))
  (test-case (= (bitwise-and 0 0) 0))
  (test-case (= (bitwise-and 65535 65535) 65535))
  (test-case (runtime-error? (bitwise-and 15.0 7)))
  (test-case (runtime-error? (bitwise-and 15 7.0)))
  (test-case (runtime-error? (bitwise-and 15 #t)))
  (test-case (runtime-error? (bitwise-and #t 15)))
  )

(define-test bitwise-or
  (test-case (= (bitwise-or 0) 0))
  (test-case (= (bitwise-or 15) 15))
  (test-case (= (bitwise-or 15 7) 15))
  (test-case (= (bitwise-or 15 39) 47))
  (test-case (= (bitwise-or 65535 39) 65535))
  (test-case (= (bitwise-or 65535 0) 65535))
  (test-case (= (bitwise-or 0 0) 0))
  (test-case (= (bitwise-or 65535 65535) 65535))
  (test-case (runtime-error? (bitwise-or 15.0 7)))
  (test-case (runtime-error? (bitwise-or 15 7.0)))
  (test-case (runtime-error? (bitwise-or 15 #t)))
  (test-case (runtime-error? (bitwise-or #t 15)))
  )

