(use-package! "unit-test")

(define-test take!
  (check (not (runtime-error? (take! :foo 0))))
  (check (runtime-error? (take! `() #\a)))
  (check (runtime-error? (take! `(1 2 3) #\a)))
  
  (let* ((xs `(1 2 3 4 5))
         (res (take! xs 0)))
    (check (equal? res '()))
    (check (eq? res ())))
  (let* ((xs `(1 2 3 4 5))
         (res (take! xs 1)))
    (check (equal? res '(1)))
    (check (eq? res xs)))
  (let* ((xs `(1 2 3 4 5))
         (res (take! xs 2)))
    (check (equal? res '(1 2)))
    (check (eq? res xs)))
  (let* ((xs `(1 2 3 4 5))
         (res (take! xs 5)))
    (check (equal? res '(1 2 3 4 5)))
    (check (eq? res xs)))
  
  (let ((xs `(1 2 3 4 5)))
    (check (runtime-error? (take! xs 6))))
  
  (let* ((xs `(1 2 3 4 . 5))
         (res (take! xs 0)))
    (check (equal? res '())))

  (let* ((xs `(1 2 3 4 . 5))
         (res (take! xs 1)))
    (check (equal? res '(1)))
    (check (eq? res xs)))
  (let* ((xs `(1 2 3 4 . 5))
         (res (take! xs 2)))
    (check (equal? res '(1 2)))
    (check (eq? res xs)))
  (let* ((xs `(1 2 3 4 . 5))
         (res (take! xs 4)))
    (check (equal? res '(1 2 3 4)))
    (check (eq? res xs)))
  (let ((xs `(1 2 3 4 . 5)))
    (check (runtime-error? (take! xs 5)))))
